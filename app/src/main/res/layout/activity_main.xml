<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saudalmajed.flow.MainActivity">

    <CheckBox
        android:id="@+id/Q4True1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahrain"
        app:layout_constraintLeft_toLeftOf="@+id/Q4True2"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Q4True2"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="447dp"
        android:onClick="submit"
        android:text="Submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/answerQ1"
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="68dp" />

    <EditText
        android:id="@+id/answerQ2"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginRight="51dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="108dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Q1)	 Eritrea, which became the 182nd member of the UN in 1993, is in the continent of"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="115dp"
        android:text="6 *  6  + 4       = "
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-3dp"

        android:layout_marginTop="184dp"
        android:text="Fastest animal"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="191dp"
        android:layout_height="27dp"
        android:text="select the contries in Asia"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="258dp"
        app:layout_constraintRight_toLeftOf="@+id/Q4True2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <RadioButton
        android:id="@+id/Q3True"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="174dp"
        android:text="Peregrine falcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/Q3False"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="206dp"
        android:text="Frigatebird"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/Q4True2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saudi Arabia"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Q4False"

        app:layout_constraintLeft_toLeftOf="@+id/Q4False" />

    <CheckBox
        android:id="@+id/Q4False"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_marginStart="154dp"
        android:text="Egypt"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.694"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="317dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/score"
        android:layout_width="333dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q4False"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="380dp" />

</android.support.constraint.ConstraintLayout>
